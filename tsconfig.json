{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src/ts",
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "src/ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}